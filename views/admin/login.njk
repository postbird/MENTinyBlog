<div class="login-form-wrapper">
    <div class="login-form">
        {#<h3 class="mdui-text-center">登录</h3>#}
        <div class="mdui-text-center">
            <a href="/"><img src="/images/logo-gray.png" alt="logo" class="logo"></a>
        </div>
        <form action="/admin/login" method="post" class="">
            <div class="mdui-textfield ">
                <i class="mdui-icon material-icons">email</i>
                <input type="text" class="mdui-textfield-input" name="name" id="name" placeholder="用户名">
            </div>
            <div class="mdui-textfield ">
                <i class="mdui-icon material-icons">lock</i>
                <input type="password" class="mdui-textfield-input" name="password" id="password"  placeholder="密码">
            </div>
            <div class="mdui-textfield login-btn-wrapper" >
                <button class="mdui-btn mdui-color-blue-grey mdui-ripple mdui-btn-block login-btn" >登 录</button>
            </div>
        </form>
    </div>
</div>
</body>
<script src="/vendor/mdui/js/mdui.min.js"></script>
<script>
    const $$ = mdui.JQ;
    $$(document).ready(()=>{
        mdui.mutation();
    });
</script>
</html>